extends layout.pug

block append head
    - var title = 'titre'
    - var description = 'ma description'
    meta(name='description' content=description)
    title #{title}

block content
    #layout.pure-g
        .sidebar.pure-u-1.pure-u-md-1-4
            .header
                h1.brand-title Juju Blog
                h2.brand-tagline Creating a blog layout using Pure

                nav.nav
                ul.nav-list
                    li.nav-item
                        a.pure-button(href="http://purecss.io") Pure
                    li.nav-item
                        a.pure-button(href="http://yuilibrary.com") YUI Library
    .content.pure-u-1.pure-u-md-3-4
        div
            div.posts
                h1.content-subhead Pinned Post
                section.post
                    header.post-header
                        img.post-avatar(width="48" height="48" alt="Tilo Mitra's avatar" src="img/common/tilo-avatar")

                        h2.post-title Introducing Pure

                        p.post-meta By
                            a.post-author Tilo Mitra

