extends template/layout.pug

block head-more
    - var title = "Julien's blog"
    - var description = 'Here we learn for fun and profits'
    meta(name='description' content=description)
    title #{title}

block content
    div
        .posts
            h1.content-subhead Pinned Post
            section.post
                header.post-header
                    img.post-avatar(width="48" height="48" alt="Julien's avatar" src="img/common/avatar_julien_cropped.JPG")

                    h2.post-title
                        a(href="template/articles/en/2018-01-06_StackExchange_codereview_quest.html" hreflang="en") The StackExchange code review quest.

                    p.post-meta By
                        |
                        |
                        a.post-author Julien
                        |
                        |
                        span under
                        a.post-category.post-category-js(href='#') News
                        |
                        |
                        span on
                        span.post-date  06-01-2018

                .post-description
                    p Start of a 30 days challenge doing code reviews on StackExchange
